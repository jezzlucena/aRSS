{
  "name": "arss",
  "version": "0.1.0",
  "private": true,
  "description": "aRSS - Another RSS Software Solution",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "docker:up": "docker compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml down",
    "docker:logs": "docker compose -f docker/docker-compose.yml logs -f",
    "docker:prod:build": "docker compose -f docker/docker-compose.prod.yml build",
    "docker:prod:up": "docker compose -f docker/docker-compose.prod.yml up -d",
    "docker:prod:down": "docker compose -f docker/docker-compose.prod.yml down",
    "docker:prod:logs": "docker compose -f docker/docker-compose.prod.yml logs -f",
    "db:generate": "turbo run db:generate --filter=@arss/api",
    "db:migrate": "turbo run db:migrate --filter=@arss/api",
    "db:studio": "turbo run db:studio --filter=@arss/api",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20"
  }
}
